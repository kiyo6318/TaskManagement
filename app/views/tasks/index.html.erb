<h2>タスク一覧</h2>

<% @tasks.each do |task| %>
  <div><%= task.title %></div>
  <div><%= task.deadline.strftime("%Y%m月%d日") %></div>
  <%= link_to t("view.show"),task_path(task.id) %>
  <%= link_to t("view.edit"),edit_task_path(task.id) %>
  <%= link_to t("view.delete"),task_path(task.id),method: :delete,data:{confirm:t("view.Are you really sure?")} %>
<% end %>
<div><%= link_to t("view.new"),new_task_path %></div>
<div><%= link_to t("view.sort"),tasks_path(sort_expired: "true") %></div>