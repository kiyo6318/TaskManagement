<h1>ユーザー 一覧</h1>

<div class="table-responsive">
  <table class="table table-bordered table-sm table-hover">
    <tr class="table-info">
      <th class="text" width="50%">ユーザー名</th>
      <th class="text" width="20%">タスク保持数</th>
      <th class="text" width="30%"></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td class="link">
          <%= link_to t("view.show"),admin_user_path(user.id),class:"btn btn-info btn-sm" %>
          <%= link_to t("view.edit"),edit_admin_user_path(user.id),class:"btn btn-warning btn-sm" %>
          <%= link_to t("view.delete"),admin_user_path(user.id),method: :delete,data:{confirm:t("view.Are you really sure?")},class:"btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to "新規ユーザー登録",new_admin_user_path %>
</div>